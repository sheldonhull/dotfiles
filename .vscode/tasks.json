{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "pwsh.exe",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-Command"
                ]
            }
        }
    },
    "linux": {
        "options": {
            "shell": {
                "executable": "/usr/bin/pwsh",
                "args": [
                    "-NoProfile",
                    "-Command"
                ]
            }
        }
    },
    "osx": {
        "options": {
            "shell": {
                "executable": "/usr/local/bin/pwsh",
                "args": [
                    "-NoProfile",
                    "-Command"
                ]
            }
        }
    },
    "inputs": [
        {
            "type": "pickString",
            "id": "branchType",
            "description": "What type of branch are you creating?",
            "options": [
                "init",
                "feature",
                "hotfix",
                "release"
            ],
            "default": "feature"
        },
        {
            "type": "promptString",
            "id": "branchname",
            "description": "name your branch",
            "default": ""
        }
    ],
    "tasks": [
        {
            "label": "git-town-hack",
            "detail": "Create a new branch from master and switch to it using git-town",
            "type": "shell",
            "problemMatcher": [
                "$msCompile"
            ],
            "command": "git town hack ${1:branchType}/${2:branchname}"
        },
        {
            "label": "git-town-new-pull-request",
            "detail": "generate a new pull request",
            "type": "shell",
            "problemMatcher": [
                "$msCompile"
            ],
            "command": "git town new-pull-request"
        },
        {
            "label": "git-town-ship",
            "detail": "ship the current feature based main development branch",
            "type": "shell",
            "problemMatcher": [
                "$msCompile"
            ],
            "command": "git town ship"
        }
    ]
}